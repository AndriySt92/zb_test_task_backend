{
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "ES2022",  
      "moduleResolution": "node",
      "target": "es2022",            
      "allowJs": true,
      "outDir": "build",                        
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      // "emitDeclarationOnly": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": [
      "node_modules", "**/*.spec.ts"
    ]
  }